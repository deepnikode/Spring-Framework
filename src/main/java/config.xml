<?xml version="1.0" encoding="UTF-8"?>

<beans 


	xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd"
    
    >
    
    	<!-- By using below code and stating property and values, 
        we are using SETTER INJECTION/ PROPERTY INJECTION method--> 
        
        
          <!--  METHOD 1"""""""-->
          
          
						        <bean   class="com.springcore.Students"  name="student1"  >
						        
						        <property name="studentId">
						        <value>1</value>
						        </property>
						        
						        <property name="studentName">
						        <value>Deep</value>
						        </property>
						        
						        <property name="studentAddress">
						        <value>Chandrapur</value>
						        </property>
						        
						        </bean>
			        
									        <bean   class="com.springcore.Students"  name="student2"  >
									        
									        <property name="studentId">
									        <value>2</value>
									        </property>
									        
									        <property name="studentName">
									        <value>Anjali</value>
									        </property>
									        
									        <property name="studentAddress">
									        <value>Nagpur</value>
									        </property>
									        
									        </bean>




			<!-- METHOD 2 """""" -->
				      
						<bean class="com.springcore.Students"  name="student5" > 
					 	
					 	<property name="studentId" value="1"  />
					 	<property name="studentName" value="SitaRam"  />
					 	<property name="studentAddress" value="Mumbai"  />
					 	
					 	</bean>







			<!--METHOD 3 ""SHORTCUT"   """"This is p Schema technique of bean declaration  -->
			
			
			
			
        
		    <bean class="com.springcore.Students"  name="student3" p:studentId="12" p:studentName="Shree" p:studentAddress="Delhi"   >
		 	</bean>
		        
		     
		    <bean class="com.springcore.Students"  name="student4" p:studentId="15" p:studentName="Ram" p:studentAddress="Chandrapur"   />
		 	
		 	
		 	
		 	
		        
		 	
		 	
		 	
		        
        

</beans>   